# FunGen Backend Environment Variables

# Application
DEBUG=false
PORT=8000

# Security - CHANGE IN PRODUCTION!
JWT_SECRET_KEY=your-super-secret-key-change-in-production

# CORS - comma-separated list of allowed origins
# Example: https://your-frontend.vercel.app,https://fungen.example.com
CORS_ORIGINS=https://your-frontend.vercel.app

# Database
# For SQLite (development):
# DATABASE_URL=sqlite+aiosqlite:///./fungen.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/fungen

# File Storage
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output
